@page "/createbook"
@inject IBookService BookService
@inject NavigationManager NavigationManager
@inject HttpClient client

<div class="container">
    <h2>Criar novo livro</h2>

    <div class="form-group">
        <label for="title">Título:</label>
        <input type="text" id="title" class="form-control" @bind="NewBook.Title" />
    </div>

    <div class="form-group">
        <label for="author">Autor:</label>
        <input type="text" id="author" class="form-control" @bind="NewBook.AuthorName" />
    </div>

    <div class="form-group">
        <label for="publisher">Editora:</label>
        <input type="text" id="publisher" class="form-control" @bind="NewBook.Publisher" />
    </div>

    <div class="form-group">
        <label for="price">Preço:</label>
        <input type="text" id="price" class="form-control" @bind="NewBook.Price" />
    </div>

    <div class="form-group">
        <label for="description">Descrição:</label>
        <textarea id="description" class="form-control" @bind="NewBook.Description"></textarea>
    </div>

    <div class="form-group">
        <label for="photo">Foto:</label>
        <BlazorInputFile.InputFile OnChange="HandlePhotoChange"></BlazorInputFile.InputFile>
    </div>

    <button class="btn btn-primary" @onclick="AddBook">Criar</button>
</div>
