@inject IBookService BookService
@inject ICustomerService CustomerService
@inject IRentalBookService RentalBookService
@page "/create-rental"

<h3 class="text-center">Criar Aluguel de Livro</h3>

@if (Books is null || Customers is null)
{
    <p class="text-center">Carregando...</p>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form class="form-container">
                    <div class="form-group">
                        <label for="bookSelect">Livro:</label>
                        <select id="bookSelect" class="form-control" @bind="@bookId">
                            <option value="">Selecione um livro</option>
                            @foreach (var book in Books)
                            {
                                <option value="@book.id">@book.Title</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="customerSelect">Cliente:</label>
                        <select id="customerSelect" class="form-control" @bind="@customerId">
                            <option value="">Selecione um cliente</option>
                            @foreach (var customer in Customers)
                            {
                                <option value="@customer.id">@customer.Email</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="rentalDate">Data de Locação:</label>
                        <input type="date" id="rentalDate" class="form-control" @bind="@RentalBook.RentalDate" />
                    </div>

                    <div class="form-group">
                        <label for="returnDate">Data de Devolução:</label>
                        <input type="date" id="returnDate" class="form-control" @bind="@RentalBook.ReturnDate" />
                    </div>

                    <div class="form-group">
                        <label for="totalPrice">Preço Total:</label>
                        <input type="number" id="totalPrice" class="form-control" @bind="@RentalBook.TotalPrice" />
                    </div>

                    <div class="form-group">
                        <label for="penalty">Multa:</label>
                        <input type="number" id="penalty" class="form-control" @bind="@RentalBook.Penalty" />
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="isReturned" class="form-check-input" @bind="@RentalBook.IsReturned" />
                        <label class="form-check-label" for="isReturned">Devolvido</label>
                    </div>

                    <div class="text-center">
                        <button type="button" class="btn btn-primary mt-3" @onclick="CreateRental">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
